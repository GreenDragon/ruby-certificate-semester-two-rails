<h1>Editing Event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= calendar_date_select_tag :start_date, @event.start_date, :time => true %>
  </p>
  <p>
    <%= f.label :duration %><br />
    <%= select :event, :duration, Event::DURATIONS, { :selected => @event.duration } %>
  </p>
  <p>
    <%= f.label :group_id %><br />
    <%= select :event, :group_id, Group.find(:all).collect { |g| [g.name, g.id] }, { :selected => @event.group_id }  %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= select :event, :location_id, Location.find(:all).collect { |l| [l.name, l.id] }, { :selected => @event.location_id } %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
